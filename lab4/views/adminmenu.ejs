<!doctype html>
<html>
<head>
  <link rel="stylesheet" href="../css/index.css">
  <meta http-equiv="Content-Type" content="text/html; charset=cp1251"/>
  <title>Register</title>
</head>
<body>
  <div class="home">
    <div id="bookstore">
      <a href="/"><img class="bookstoreImg" alt="bookstore" src="../pics/bookstore-logo.jpg"></a>
    </div>
  </div>
  <div class="regContent">
    <form method="post" accept-charset="UTF-8">
      <div id="regInsideContent">
      <div class="regField">
        <label>First name:</label>
        <input type="text" name="firstname">
      </div>
      <div class="regField">
        <label>Last name:</label>
        <input type="text" name="lastname">
      </div>
      <div class="regField">
        <label>E-mail:</label>
        <input type="text" name="email">
      </div>
      <div class="regField">
        <label>Username:</label>
        <input type="text" name="username">
      </div>
      <div class="regField">
        <label>Password:</label>
        <input type="text" name="password">
      </div>
      <div class="regField">
        <label>Confirm password:</label>
        <input type="text" name="confirmPassword">
      </div>
        </div>
      <div class="regField">
        <input id="submitButt" type="submit" value="Sign Me Up!">
      </div>
    </form>
<br>
            <a href="/users/login" id="loginLink"><div>Log in</div></a>
                            <a href="/">Home</a>
    <p>
    </p>

    <% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(elements){ %>
    <div class="alert alert-danger"><%= elements.msg %></div>
    <%}); %>
    <%} %>

    <div class="row">
      <% if(typeof success_msg != 'undefined'){ %>
        <div class="alert alert-success"><%= success_msg %></div>
      <%} %>
      <% if(typeof error_msg != 'undefined'){ %>
        <div class="alert alert-success"><%= error_msg %></div>
      <%} %>
      <% if(typeof error != 'undefined'){ %>
        <div class="alert alert-success"><%= error %></div>
      <%} %>
    </div>

  </div>
  <div id="footter">
    <p id="copyrights">by Medvedskyi Denys 2016</p>
  </div>
</body>
</html>
